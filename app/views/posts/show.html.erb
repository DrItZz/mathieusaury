<div class="hero-unit">
</div>

<div class="row">
	<div class="span16">
		<h1>Your post</h1>
		<p id="notice"><%= notice %></p>
		 
		<p>
		  <b>Name:</b>
		  <%= @post.name %>
		</p>
		 
		<p>
		  <b>Title:</b>
		  <%= @post.title %>
		</p>
		 
		<p>
		  <b>Content:</b>
		  <%= @post.content %>
		</p>
		
		<h3>Comments</h3>
		<%= render @post.comments %>
		 
		<h4>Add a comment:</h4>
		<%= render "comments/form" %>
 
	</div>
</div> 
 

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back to Posts', posts_path %> |
